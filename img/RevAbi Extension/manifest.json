{
  "manifest_version": 3,
  "name": "RevAbi Extension",
  "version": "1.0",
  "description": "RevAbi Extension: Review filtering",
  "permissions": [
    "activeTab",  
    "tabs",
    "scripting"
],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
],
  "background": {
    "service_worker": "background.js"
},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon2.png",
      "48": "icons/icon2.png",
      "128": "icons/icon2.png"
  }
},
  "icons": {
      "16": "icons/icon2.png",
      "48": "icons/icon2.png",
      "128": "icons/icon2.png"
  }
}